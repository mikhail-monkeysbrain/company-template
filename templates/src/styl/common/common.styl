// Дополнительные стили уровня проекта (все что кроме блоков и глобальных стилей)

@import '../core/variables.styl';
@import '../core/mixins.styl';

.container
  position relative
  max-width 100%
  width 122.5rem
  margin 0 auto

.count
  position absolute
  right 0
  top -.4rem
  width 1.6rem
  height 1.6rem
  border-radius 50%
  display flex
  justify-content center
  align-items center
  background $purple
  color #ffffff
  font-size 1.1rem

.slick-dots
  display flex
  margin-top 1.5rem
  li
    width 2.027rem
    height 2.027rem
    position relative
    margin 0 .1rem
    cursor pointer
    &.slick-active
      button
        opacity 0.2
  /*кастомизировал стили для увеличения области тапа*/
  button
    font-size: 0
    position absolute
    width 2.027rem
    height 2.027rem
    background #000000
    border .5rem solid #edeeee
    border-radius: 50%
    padding 0
    cursor pointer
    transition: fast