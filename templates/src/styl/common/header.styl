@import '../core/variables.styl'

header
  width 100%
  position fixed
  z-index 1
  left 0
  top 0
  height 9.8rem
  background #ffffff

.header
  max-width 100%
  width 122.5rem
  margin 0 auto
  display flex
  align-items center
  padding 2.5rem 0 1.8rem

  .tablet &
    justify-content space-between
    width 69rem
    padding 2.1rem 0 1.8rem

  .mobile &
    justify-content space-between
    width 51rem

  &__popup
    display none

    &--inner

      .tablet &
        padding 8rem 4rem 0
      .mobile &
        padding 8rem 7rem 0
      .tablet &,
      .mobile &
        width 100%
        height 100%
        max-height: 90vh
        overflow-y: auto
        display flex
        flex-direction: column
        justify-content space-between

        .popup__toggle
          transform: scale(1.3)
          top -3.5rem

        .compare
          display flex
          font-size 2.4rem
          margin-bottom 4.6rem
          &--btn
            width 4rem
            height 4rem
            background-size 70%
          .count
            right -0.5rem
            top -0.6rem
            width 2.2rem
            height 2.2rem
            font-size 1.6rem

        .header
          &--option
            display flex
            flex-direction: column
            margin-left 0
            align-items flex-start

          &--select
            display block
            margin 0
            border 0
            font-size: 2.4rem
            width 100%
            padding-left 0
            color $purple
            margin-bottom 7.8rem

            &::after
              display none

          &--phone
            left 0
            font-size 4rem
            margin-bottom 7rem
          &--nav
            display flex
            flex-direction: column
            margin-bottom 7rem
            &--item
              font-size 2.4rem
              line-height 5.8rem

    .tablet &,
    .mobile &
      position fixed
      z-index 2
      width 100%
      height 100%
      background #ffffff
      left 0
      top 0
      padding-top 10rem

  &--nav
    font-size 1.4rem
    margin 0 .5rem
    display flex
    flex-shrink 0

    .tablet &,
    .mobile &
      display none

    &--item
      margin-right 2.2rem
      color $purple
      transition fast
      &:hover
        text-shadow 0 0 .1rem $purple

  &--option
    display flex
    align-items center
    justify-content space-between
    margin-left 5rem

    .tablet &,
    .mobile &
      margin-left auto

  &--phone
    display flex
    align-items center
    font-family $vida33
    color #000000
    font-size 1.8rem
    position relative
    &--icon
      width 3.6rem
      height 3.6rem
      background $purple
      border-radius 50%
      display flex
      justify-content center
      align-items center
      color #ffffff
      margin-left 1.8rem
      position relative
      z-index 1

    .tablet &,
    .mobile &
      left -2.5rem
      position relative

    .mobile &
      left -1.2rem
      top -0.4rem

      .popup__toggle
        top -2.8rem
        left -1.3rem

      i
        font-size 2rem
  
  &--select
    font-size 1.4rem
    border 1px solid $border
    padding 0.2rem 2rem .2rem 1.5rem
    border-radius 2.5rem
    margin 0 1.5rem 0 2.5rem
    position relative
    width 15rem

    .tablet &,
    .mobile &
      display none

    &::after
      content ''
      position absolute
      right 1rem
      top 1rem
      display block
      width 0
      height 0
      border-style solid
      border-width 0.6rem 0.4rem 0 0.4rem
      border-color #808080 transparent transparent transparent

.logo
  margin-right 5rem
  width 14.6rem
  position relative
  z-index 3
  img
    width 100%

.compare
  display flex
  justify-content flex-start
  align-items center
  cursor pointer
  color $purple
  font-size 1.4rem

  .tablet &,
  .mobile &
    display none

  &--btn
    width 3rem
    height 3rem
    background url(../images/base/compare.png) center no-repeat
    position relative
    margin-right .4rem


.burger
  width 5rem
  height 2.5rem
  position relative
  transform scale(.65)
  display none
  z-index 3
  left 1.1rem
  top -0.5rem

  .tablet &,
  .mobile &
    display block

.burger .line
  display block
  background $purple
  width 5rem
  height .4rem
  position absolute
  left 0
  border-radius .2rem
  transition all 0.4s
  -webkit-transition all 0.4s
  -moz-transition all 0.4s

.burger .line.line-1
  top 0

.burger .line.line-2
  top 50%

.burger .line.line-3
  top 100%

.burger:hover .line-1, .burger:focus .line-1
  transform translateY(-.2rem)

.burger:hover .line-3, .burger:focus .line-3
  transform translateY(.2rem)

.burger.active .line-1
  transform translateY(1.25rem) translateX(0) rotate(45deg)

.burger.active .line-2
  opacity 0

.burger.active .line-3
  transform translateY(-1.25rem) translateX(0) rotate(-45deg)
