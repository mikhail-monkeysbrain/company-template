.object
  position relative

  &--img
    width 100%
    height 23.2rem
    object-fit: cover

  &--description
    width 100%
    max-width 123rem
    margin 0 auto
    left 0
    right 0
    bottom 0
    position absolute

    .tablet &
      max-width 69rem

    .mobile &
      max-width 51rem

    &--heading
      &__small
        padding 1.4rem 2.3rem 0rem 1.9rem
        background #ffffff
        color $gray
        font-family $vida33
        font-size 1.8rem
        display inline-block
        line-height 1
        position relative
        top 0.7rem
      &__big
        padding 1.2rem 3.3rem 0.8rem 2rem
        color $darkgray
        font-family $vida33
        display inline-block
        background #ffffff
        font-size 4.8rem
        line-height 1
    
        .tablet &
          font-size 3.2rem
    
        .mobile &
          font-size 2.6rem