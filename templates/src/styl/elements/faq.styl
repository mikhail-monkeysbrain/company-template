.faq
  &__heading
    font-family $vida33
    font-size 1.8rem
  &__date
    margin-bottom 1.7rem

.accordeon 
  width: 100%
  position: relative
  a 
    display: block
    text-decoration: none
  .answer
    display none
    padding-top 1.8rem 
  .ac
    border: 1px solid $darkborder
    margin-bottom 2rem
    padding: 2.6rem 2.6rem 5rem 2.6rem
    border-radius: .8rem
    transition: slow
    &_head
      cursor pointer
      border-radius .8rem .8rem 0 0
      position relative
    &--arrow
      width 2.4rem
      position absolute
      right 1.2rem
      top calc(50% - 0.2rem)
      i
        margin-left .9rem
        border: 1px solid #000
        color #000
        opacity 0.4
        border-radius: 50%
        padding 0.5rem
        display inline-flex
        justify-content center
        align-items center
        width 2.4rem
        height 2.4rem
        padding-left 0.5rem
        padding-top .6rem
        font-size: 1.4rem
        transition: slow

.js_up
  &.ac
    background $gray-bg

.js_up
  .ac
    &--arrow
      i
        transform: rotate(180deg)
        background $purple
        color #ffffff
        border: 1px solid $purple
        opacity 1
        padding-top 0.7rem